<configuration>
    <!-- Определяем консольный аппендер -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Формат вывода: Дата Время [Поток] Уровень ИмяКласса - Сообщение -->
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Устанавливаем корневой уровень логирования (например, INFO) -->
    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>